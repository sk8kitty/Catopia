@model Cat

<div class="container mt-4">
    <div class="my-4"></div>

    <div class="card p-3 shadow" style="max-width: 500px; margin: auto;">
        <div class="card-body">
            <h2 class="card-title text-center">Adoption Application</h2>
            <h4 class="text-center">You're adopting...</h4>

            <div class="text-center">
                <img src="@Model.ImageURL" alt="@Model.Name" class="img-fluid rounded-circle" style="width: 150px; height: 150px;">
                <h4 class="mt-2">@Model.Name</h4>
            </div>

            <form asp-action="AdoptionApp" method="post">
                <div class="form-group">
                    <label for="FullName"><strong>Full Name</strong></label>
                    <input type="text" class="form-control" id="FullName" name="FullName" required>
                </div>

                <div class="form-group">
                    <label for="Address"><strong>Address</strong></label>
                    <input type="text" class="form-control" id="Address" name="Address" required>
                </div>

                <div class="form-group">
                    <label for="PhoneNumber"><strong>Phone Number</strong></label>
                    <input type="tel" class="form-control" id="PhoneNumber" name="PhoneNumber" required>
                </div>

                <div class="form-group" style="margin-bottom: 1em;">
                    <label for="Explanation"><strong>Why this cat is a good fit for you:</strong></label>
                    <textarea class="form-control" id="Explanation" name="Explanation" rows="3" required></textarea>
                </div>

                <div class="form-group text-center">
                    <button type="submit" class="btn btn-primary btn-block">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>
